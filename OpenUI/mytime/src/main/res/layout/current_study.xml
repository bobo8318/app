<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:id="@+id/start_time"
        android:textSize="@dimen/btnTextSize"
        android:textColor="#3f66f2"
        android:text="开始时间："/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:id="@+id/study_title"
        android:layout_gravity="center"
        android:textSize="@dimen/MiddleTimeTextSize"
        android:textColor="#3f66f2"
        android:text="进入学习"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/BigTimeTextSize"
        android:layout_margin="20sp"
        android:id="@+id/study_time"
        android:text="00:00:00"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/study_btn_start"
            android:enabled="false"
            android:text="开始"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/study_btn_pause"
            android:text="暂停"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/study_btn_finish"
            android:text="结束"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:text="学习记录"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:id="@+id/study_note"
        />

</LinearLayout>
