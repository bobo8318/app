<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.openui.www.mytime">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <provider
            android:authorities="www.openui.cn.provider"
            android:name="cn.openui.www.mytime.provider.TypeProvider"></provider>
        
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.ShowTypeActivity" />

        <activity
            android:name=".activity.AddTypeActive" />

        <activity
            android:name=".activity.ListLogActivy" />

    </application>

</manifest>